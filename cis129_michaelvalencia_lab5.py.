#lab 5 part 2
// Step 1: Declare variables below 
totalBottles = 0
counter = 1
todayBottles = 0
totalPayout = 0
keepGoing = "y"

// Step 3: Loop to run program again
While keepGoing = "y"
    // Step 2: Code to set value of variables
    
    // Call getBottles function to set value of totalBottles and totalPayout
    Call getBottles
    
    // Code to print the number of total bottles and total payout
    Call printInfo
    
    Display "Do you want to enter another week’s worth of data?"
    Display "(Enter y or n)"
    Input keepGoing
End While

// getBottles code
NBR_OF_DAYS = 7
// Declare and initialize totalBottles, todayBottles, counter to 0
totalBottles = 0
todayBottles = 0
counter = 0

While counter < NBR_OF_DAYS
    Display "Enter number of bottles returned for day #", counter + 1, ":"
    Input todayBottles
    totalBottles = totalBottles + todayBottles
    counter = counter + 1
End While

// calcPayout code
PAYOUT_PER_BOTTLE = 0.10
totalPayout = totalBottles * PAYOUT_PER_BOTTLE

// printInfo code
Display "Total number of bottles collected: ", totalBottles
Display "Total payout: $", totalPayout

#lab 5 part 3
# CIS129_YourName_Lab5.py
# Date: [current date]
# Author: [Your Name]
# Description: This program calculates the total number of bottles collected and the total payout based on user input.

def main():
    # Step 1: Declare variables
    total_bottles = 0
    total_payout = 0

    # Step 2: Loop to run program again
    while True:
        # Step 3: Code to set value of variables
        for day in range(1, 8):
            bottles = int(input(f"Enter number of bottles for day #{day}: "))
            total_bottles += bottles
            total_payout += bottles * 0.1
        
        # Print total bottles and total payout
        print("\nThe total number of bottles collected is", total_bottles)
        print("The total paid out is $", total_payout)

        choice = input("\nDo you want to enter another week’s worth of data? (Enter y or n): ")
        if choice.lower() != 'y':
            break

if __name__ == "__main__":
    main()


